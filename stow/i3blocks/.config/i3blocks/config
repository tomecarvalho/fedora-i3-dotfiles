# i3blocks config file - http://vivien.github.io/i3blocks

# Valid properties:
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=~/.config/i3blocks/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=pango
COLOR_DISABLED=#7c6f64
COLOR_ENABLED=#b8bb26
COLOR_ICON_INTERACTABLE=#83a598
COLOR_ICON_INFO=#fabd2f
COLOR_ACTIVE_WINDOW=#8ec07c

[i3-focusedwindow]
interval=persist
LABEL=ó°£†   

# Media player status
# Left click: previous track
# Middle click: play/pause
# Right click: next track
[mediaplayer]
interval=5
signal=5

# Pipewire volume control
# Displays volume and output device
# Left click: toggle output device
# Middle click: toggle mute
# Right click: open volume mixer app
[volume-pipewire]
interval=1
signal=1
LONG_FORMAT="${SYMB} ${VOL}% [${NAME}]"
DEVICE_ALIASES=ALC287 Analog:Laptop;HDMI 0:HDMI

# Microphone volume control
# Left click: set low volume preset
# Middle click: toggle mute
# Right click: set high volume preset
[volume-input-pipewire]
interval=5
signal=4

# Brightness (brightnessctl)
# Left click: set low brightness preset
# Right click: set high brightness preset
# Scroll: change brightness
[brightnessctl]
interval=60
signal=3

# Battery indicator (customised script)
# Colour scheme: gruvbox-dark
# Related udev rule to trigger update on status change: /etc/udev/rules.d/99-battery-status.rules
[battery]
interval=60
signal=2
COLOR_CRITICAL=#cc241d
COLOR_LOW=#d79921
COLOR_MEDIUM=#98971a
COLOR_GOOD=#689d68

# Caffeine
# Left click: toggle
[caffeine]
interval=60

# Time and date
# Left click: cycle through timezones
# Right click: launch calendar app (set via CALENDAR_APP env var)
[time]
interval=5
STRFTIME_FORMAT=%a %d/%m/%Y %R
TZONES=$DEFAULT_TZ,UTC
TZ_LABELS=,UTC
CALENDAR_APP=thunderbird -calendar
# Last block padding
separator=false
separator_block_width=6

# Spacer
[spacer]
command=echo ""
interval=once

# OpenVPN support
#
# Support multiple VPN, with colors.
#[openvpn]
#interval=20