# i3 config file (v4). Reference: https://i3wm.org/docs/userguide.html

# Exec aliases
set $xnsi exec --no-startup-id
set $xansi exec_always --no-startup-id

# Modifier
set $mod Mod4

# Direction keys
set $left h
set $down j
set $up k
set $right l

# Applications
set $browser firefox
set $terminal alacritty
set $terminal_file_manager ranger
set $terminal_editor nvim
set $gui_file_manager thunar

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:sans-serif 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
$xnsi dex-autostart --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
$xnsi xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
$xnsi nm-applet

# Gnome keyring
$xnsi dbus-update-activation-environment --all
$xnsi ~/.config/i3/scripts/gnome-keyring.sh

# dunst: Notifications
$xnsi dunst

# greenclip: Clipboard manager
$xnsi greenclip daemon

# picom: Compositor
$xansi picom --config ~/.config/picom/picom.conf

# autorandr: Automatically detect and apply monitor layouts
$xansi autorandr --change --default default

# redshift: Always-on night light
$xnsi redshift -c ~/.config/redshift/redshift.conf -m randr

# feh: Set wallpaper
$xansi feh --bg-scale --no-fehbg ~/wallpapers/gruvbox-fedora-dark.png

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume $xnsi pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume $xnsi pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute $xnsi pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute $xnsi pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use brightnessctl to adjust brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# rofi launcher
bindsym $mod+d $xnsi "rofi -show combi -combi-modi 'drun,run,ssh'"

# rofi windows
bindsym $mod+Tab $xnsi "rofi -show window"

# rofi clipboard (greenclip)
bindsym $mod+v $xnsi rofi -show clipboard

# rofi power menu
bindsym $mod+Escape exec rofi -show power-menu -modi "power-menu:~/.config/rofi/scripts/rofi-power-menu.sh --choices=shutdown/reboot/suspend/logout/lockscreen --confirm=''"

# Change focused window
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Splits and layouts
bindsym $mod+u layout stacking
bindsym $mod+i layout tabbed
bindsym $mod+o split h
bindsym $mod+p split v

# Fullscreen
bindsym $mod+F11 fullscreen toggle

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Workspaces
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Resize mode
mode "resize" {
  bindsym $left resize shrink width 10 px or 10 ppt
  bindsym $down resize grow height 10 px or 10 ppt
  bindsym $up resize shrink height 10 px or 10 ppt
  bindsym $right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+s mode "default"
}
bindsym $mod+s mode "resize"

# App shortcuts
bindsym $mod+q exec $browser
bindsym $mod+w exec $terminal -e $terminal_editor
bindsym $mod+e exec $terminal -e $terminal_file_manager
bindsym $mod+r exec $gui_file_manager

# class                 border  bground text    indicator child_border
client.focused          #83CAFA #51A2DA #FFFFFF #83CAFA   #51A2DA
client.focused_inactive #8C8C8C #4C4C4C #FFFFFF #4C4C4C   #8C8C8C
client.unfocused        #4C4C4C #222222 #888888 #292D2E   #222222
client.urgent           #EC69A0 #DB3279 #FFFFFF #DB3279   #DB3279
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C

client.background       #FFFFFF

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
  colors {
    background #000000
    statusline #FFFFFF
    separator  #666666

    focused_workspace  #83CAFA #51A2DA #FFFFFF
    active_workspace   #3C6EB4 #294172 #FFFFFF
    inactive_workspace #8C8C8C #4C4C4C #888888
    urgent_workspace   #EC69A0 #DB3279 #FFFFFF
    binding_mode       #b691d3 #A07CBC #FFFFFF
  }
  status_command i3status
}

# Give every window a 1px border and title bar
for_window [class=.*] border normal 1